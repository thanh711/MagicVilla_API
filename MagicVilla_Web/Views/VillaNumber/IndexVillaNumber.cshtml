@model IEnumerable<MagicVilla_Web.Models.Dto.VillaNumberDTO>

@{
    ViewData["Title"] = "IndexVillaNumber";
   
}

<h1>Index VillaNumber</h1>

<p>
    <a class="btn btn-success" asp-action="Create"><i class="fa-solid fa-plus"></i> Add Villa Number</a>

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VillaNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Villa.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SpecialDetails)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VillaNo)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Villa.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpecialDetails)
            </td>
            <td>
                    <a class="btn btn-warning" asp-action="Update" asp-route-id="@item.VillaNo"><i class="fa-solid fa-pencil"></i> Update</a>
                    <form asp-action="Delete" asp-route-id="@item.VillaNo"
                      onclick="return confirm('Are you sure you want to delete this?')">
                        <button type="submit" class="btn btn-danger"><i class="fa-solid fa-trash-can"></i> Delete</button>
                    </form>
            </td>
        </tr>
}
    </tbody>
</table>
